<% if session[:current_user_dn] %>

<% else %>
	<h2>Log In</h2>

	<form action="/authenticate" method="post">
		<p>
			Username:
			<input type="text" name="username">
		</p>
		<p>
			Password:
			<input type="password" name="password">
		</p>

		<input type="submit" value="Submit">
	</form>
<% end %>
